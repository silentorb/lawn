{
  "tables": {
    "address": {
      "name": "addresses"
    },
    "country": {
      "name": "countries"
    },
    "roles_users": {
      "primary_keys": [ "user", "role" ],
      "properties": {
        "user": {
          "type": "int"
        },
        "role": {
          "type": "int"
        }
      }
    }
  },
  "trellises": {
    "resource": {
      "primary_key": "guid",
      "properties": {
        "guid": {
          "type": "guid"
        },
        "name": {
          "type": "string",
          "allow_null": true
        },
        "author": {
          "type": "reference",
          "trellis": "user",
          "insert": "author",
          "readonly": true,
          "allow_null": true
        },
        "type": {
          "type": "string",
          "readonly": true,
          "insert": "trellis"
        },
        "created": {
          "type": "created",
          "readonly": true
        },
        "modified": {
          "type": "modified",
          "readonly": true
        }
      }
    },
    "object": {
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string",
          "allow_null": true
        },
        "author": {
          "type": "reference",
          "trellis": "user",
          "insert": "author",
          "readonly": true,
          "allow_null": true
        },
        "type": {
          "type": "string",
          "readonly": true,
          "insert": "trellis"
        },
        "created": {
          "type": "created",
          "readonly": true
        },
        "modified": {
          "type": "modified",
          "readonly": true
        }
      }
    },
    "file": {
      "primary_key": "guid",
      "properties": {
        "guid": {
          "type": "guid"
        },
        "name": {
          "type": "string",
          "default": ""
        },
        "path": {
          "type": "string",
          "default": ""
        },
        "size": {
          "type": "int",
          "default": 0
        },
        "author": {
          "type": "reference",
          "trellis": "user",
          "insert": "author",
          "allow_null": true
        },
        "timestamp": {
          "type": "created"
        },
        "extension": {
          "type": "string",
          "default": ""
        },
        "status": {
          "type": "int",
          "default": 0
        }
      }
    },
    "notification": {
      "primary_key": "id",
      "properties": {
        "id": {
          "type": "int"
        },
        "type": {
          "type": "string",
          "readonly": true,
          "insert": "trellis"
        },
        "created": {
          "type": "created",
          "readonly": true
        },
        "event": {
          "type": "string"
        },
        "targets": {
          "type": "list",
          "trellis": "notification_target"
        }
      }
    },
    "notification_target": {
      "primary_key": "id",
      "properties": {
        "id": {
          "type": "int"
        },
        "notification": {
          "type": "reference",
          "trellis": "notification"
        },
        "recipient": {
          "type": "reference",
          "trellis": "user"
        },
        "received": {
          "type": "bool",
          "default": false
        },
        "viewed": {
          "type": "datetime"
        }
      }
    },
    "user": {
      "primary_key": "id",
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "private": true
        },
        "email": {
          "type": "string",
          "private": true,
          "allow_null": true
        },
        "created": {
          "type": "created",
          "readonly": true,
          "private": true
        },
        "modified": {
          "type": "modified",
          "readonly": true,
          "private": true
        },
        "roles": {
          "type": "list",
          "trellis": "role",
          "private": true
        },
        "online": {
          "type": "bool",
          "default": false
        },
        "facebook_id": {
          "type": "unsigned bigint",
          "private": true,
          "allow_null": true
        },
        "phone": {
          "type": "string",
          "private": true,
          "allow_null": true
        },
        "address": {
          "type": "reference",
          "trellis": "address",
          "allow_null": true
        },
        "image": {
          "type": "reference",
          "trellis": "file",
          "allow_null": true
        },
        "status": {
          "type": "int",
          "default": 1
        }
      }
    },
    "role": {
      "primary_key": "id",
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        },
        "users": {
          "type": "list",
          "trellis": "user"
        }
      }
    },
    "session": {
      "primary_key": "token",
      "properties": {
        "token": {
          "type": "string"
        },
        "user": {
          "type": "reference",
          "trellis": "user"
        },
        "hostname": {
          "type": "string",
          "allow_null": true
        },
        "timestamp": {
          "type": "int",
          "default": 0
        },
        "cache": {
          "type": "int",
          "allow_null": true
        },
        "session": {
          "type": "text",
          "allow_null": true
        }
      }
    },
    "update_log": {
      "properties": {
        "id": {
          "type": "int"
        },
        "user": {
          "type": "reference",
          "trellis": "user",
          "allow_null": true
        },
        "data": {
          "type": "text"
        },
        "trellis": {
          "type": "string"
        },
        "created": {
          "type": "created"
        },
        "modified": {
          "type": "modified"
        }
      }
    },
    "address": {
      "parent": "resource",
      "properties": {
        "street1": {
          "type": "string",
          "allow_null": true
        },
        "street2": {
          "type": "string",
          "allow_null": true
        },
        "country": {
          "type": "reference",
          "trellis": "country",
          "default": 0,
          "allow_null": true
        },
        "province": {
          "type": "reference",
          "trellis": "province",
          "default": 0,
          "allow_null": true
        },
        "city": {
          "type": "string",
          "allow_null": true
        },
        "zip": {
          "type": "string",
          "allow_null": true
        }
      }
    },
    "country": {
      "plural": "counties",
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "province": {
      "properties": {
        "id": {
          "type": "int"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "password_reset_request": {
      "properties": {
        "id": {
          "type": "int"
        },
        "user": {
          "type": "reference",
          "trellis": "user"
        },
        "password": {
          "type": "string"
        },
        "created": {
          "type": "datetime",
          "insert": "created"
        },
        "modified": {
          "type": "datetime",
          "insert": "modified"
        },
        "used": {
          "type": "bool",
          "default": false
        }
      }
    }
  }
}